---
import Section from "../Section.astro"

import { work } from '@cv'
---

<Section title="Experiencia laboral">
    <ul>
        {
            work.map(
                ({ name, startDate, endDate, position, summary, highlights }) => {
                    const startYear = new Date(startDate).getFullYear(); // Definir startYear aqu√≠
                    const currentYear = new Date().getFullYear();
                    const endYear = endDate ? new Date(endDate).getFullYear() : currentYear;
                    const years = `${startYear} - ${endYear === currentYear ? "Actual" : endYear}`;

                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{name}</h3>
                                        <h4>{position}</h4>
                                    </div>
                                    <time>{years}</time>
                                </header>

                                <footer>
                                    <p>{summary}</p>
                                </footer>
                        </article>
                    </li>
                    )
                }
            )
        }
    </ul>
</Section>


<style>
    li {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        color: #555;
        font-size: 0.85rem;
    }
</style>
